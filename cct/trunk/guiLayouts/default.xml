<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE gui SYSTEM "layout.dtd">
<gui>
	<panel layout="border">
		<splitpane drawcontinuous="true" resizeweight="1" split="horizontal">
			<panel layout="border">
				<center>
					<panel layout="box" orientation="page">
						<component type="timerDisplay"/>
						<component border="" type="scrambleText"/>
					</panel>
				</center>
				<south>
					<panel layout="box" orientation="page">
						<scrollpane verticalpolicy="never" horizontalpolicy="asneeded">
							<panel alignmentY=".5" layout="flow" hgap="5" vgap="5">
								<component type="stackmatStatusLabel"/>
								<component type="scrambleChooser"/>
								<component type="scrambleLength"/>
								<component type="scrambleNumber"/>
								<component type="scrambleAttributes"/>
							</panel>
						</scrollpane>
						<component alignmentX=".5" type="startStopPanel"/>
						<panel layout="border">
							<line_start><button action="submitSundayContest">Submit Sunday Contest</button></line_start>
							<center><panel><checkbox alignmentX=".5" action="keyboardTiming"/></panel></center>
							<line_end><panel>
								<button action="newSession">New Session</button>
								<button action="reset">Clear Session</button>
							</panel></line_end>
						</panel>
						<panel layout="box" orientation="line">
							<panel border=";Session Statistics" layout="box" orientation="page">
								<panel layout="box" orientation="line">
									<label>RA of $$configuration_Statistics_raSize0$$</label>
									<button action="currentAverage0"><![CDATA[<html><font color="$$configuration_Statistics_Color_currentAverage$$">Current Average: $$currentAverage0$$ ($$progressAverage0$$)</font></html>]]></button>
									<button action="bestAverage0"><![CDATA[<html><font color="$$configuration_Statistics_Color_bestRA$$">Best RA: $$bestRA0$$</font></html>]]></button>
								</panel>
								<panel layout="box" orientation="line">
									<label>RA of $$configuration_Statistics_raSize1$$</label>
									<button action="currentAverage1"><![CDATA[<html><font color="$$configuration_Statistics_Color_currentAverage$$">Current Average: $$currentAverage1$$ ($$progressAverage1$$)</font></font></html>]]></button>
									<button action="bestAverage1"><![CDATA[<html><font color="$$configuration_Statistics_Color_bestRA$$">Best RA: $$bestRA1$$</font></html>]]></button>
								</panel>
								<panel layout="box" orientation="line">
									<label>$$solves$$/$$attempts$$ (solves/attempts)</label>
									<button action="sessionAverage"><![CDATA[<html>Session Average: $$sessionAverage$$ ($$progressSessionAverage$$)</html>]]></button>
								</panel>
								<panel></panel> <!-- I have no idea why this needs to be here, weird behavior without it -->
							</panel>
							<panel border=";Cubing History" layout="box" orientation="page">
								<panel><label alignmentX=".5">Best time ever: $$veryBestTime$$</label></panel>
								<panel><label alignmentX=".5">Best RA of $$configuration_Statistics_raSize0$$: $$veryBestRA0$$</label></panel>
								<panel><label alignmentX=".5">$$globalSolveCount$$/$$globalAttemptCount$$ solve average: $$globalAverage$$</label></panel>
							</panel>
						</panel>
						<panel layout="border" preferredsize="100x25">
							<scrollpane verticalpolicy="asneeded" horizontalpolicy="asneeded">
								<component type="commentarea"/>
							</scrollpane>
						</panel>
					</panel>
				</south>
			</panel>
			<panel nominsize="false" layout="border">
				<tabbedpane>
					<component name="Times" type="timesList"/>
					<component name="Sessions" type="sessionsList"/>
				</tabbedpane>
			</panel>
		</splitpane>
	</panel>
	<menubar>
		<menu mnemonic="f">File
			<menuitem action="importScrambles">Import scrambles</menuitem>
			<menuitem action="exportScrambles">Export scrambles</menuitem>
			<separator/>
			<menuitem action="addTime">Add time</menuitem>
			<separator/>
			<menuitem action="connectToServer">Connect to server</menuitem>
			<separator/>
			<menuitem action="showConfiguration">Configuration</menuitem>
			<separator/>
			<menuitem action="exit">Exit</menuitem>
		</menu>
		<menu mnemonic="o">Options
			<menuitem action="undo"/>
			<menuitem action="redo"/>
			<separator/>
			<menu mnemonic="k">Keyboard Timer
				<checkboxmenuitem action="toggleLessAnnoyingDisplay">Use less-annoying status light</checkboxmenuitem>
				<checkboxmenuitem action="toggleHideScrambles">Hide scrambles when timer not focused</checkboxmenuitem>
				<checkboxmenuitem action="toggleSpacebarStartsTimer">Only spacebar starts timer</checkboxmenuitem>
				<checkboxmenuitem action="toggleFullscreenTiming">Fullscreen while timing</checkboxmenuitem>
			</menu>
			<component type="customGUIMenu"/>
		</menu>
		<button nominsize="true" action="undo"/>
		<button nominsize="true" action="redo"/>
		<glue orientation="horizontal"/>
		<component type="profilecombobox"/>
		<component type="clock"/> <!-- Probably want to add a gui option for empty borders, to create blank space -->
		<menu mnemonic="h">Help
			<menuitem action="showDocumentation">View Documentation</menuitem>
			<menuitem action="showAbout">About</menuitem>
		</menu>
		<button nominsize="true" action="togglefullscreen">+</button>
	</menubar>
</gui>
