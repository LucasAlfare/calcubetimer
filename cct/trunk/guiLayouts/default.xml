<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE gui SYSTEM "layout.dtd">
<gui>
	<panel layout="border">
		<splitpane drawcontinuous="true" resizeweight="1" split="horizontal">
			<panel layout="border">
				<center>
					<panel layout="box" orientation="page">
						<component type="timerDisplay"/>
						<component type="scrambleText"/>
					</panel>
				</center>
				<south>
					<panel layout="box" orientation="page">
						<scrollpane verticalpolicy="never" horizontalpolicy="asneeded">
							<panel alignmentY=".5" layout="flow" hgap="5" vgap="5">
								<component type="stackmatStatusLabel"/>
								<component type="scrambleChooser"/>
								<component type="scrambleLength"/>
								<component type="scrambleNumber"/>
								<component type="scrambleAttributes"/>
							</panel>
						</scrollpane>
						<panel layout="border">
							<line_start><button action="submitSundayContest">%%submitsunday%%</button></line_start>
							<center><panel><checkbox alignmentX=".5" action="keyboardTiming"/></panel></center>
							<line_end><panel>
								<button action="newSession">%%newsession%%</button>
								<button action="reset">%%clearsession%%</button>
							</panel></line_end>
						</panel>
						<panel layout="box" orientation="line">
							<panel border="%%seshstats%%" layout="box" orientation="page">
								<panel layout="box" orientation="line">
									<label>%%raof%% $$configuration_Statistics_raSize0$$</label>
									<button action="currentAverage0"><![CDATA[<html><font color="$$configuration_Statistics_Color_currentAverage$$">%%currave%% $$currentAverage0$$ ($$progressAverage0$$)</font></html>]]></button>
									<button action="bestAverage0"><![CDATA[<html><font color="$$configuration_Statistics_Color_bestRA$$">%%bestra%% $$bestRA0$$</font></html>]]></button>
								</panel>
								<panel layout="box" orientation="line">
									<label>%%raof%% $$configuration_Statistics_raSize1$$</label>
									<button action="currentAverage1"><![CDATA[<html><font color="$$configuration_Statistics_Color_currentAverage$$">%%currave%% $$currentAverage1$$ ($$progressAverage1$$)</font></font></html>]]></button>
									<button action="bestAverage1"><![CDATA[<html><font color="$$configuration_Statistics_Color_bestRA$$">%%bestra%% $$bestRA1$$</font></html>]]></button>
								</panel>
								<panel layout="box" orientation="line">
									<label>$$solves$$/$$attempts$$ (%%solves%%/%%attempts%%)</label>
									<button action="sessionAverage"><![CDATA[<html>%%seshave%% $$sessionAverage$$ ($$progressSessionAverage$$)</html>]]></button>
								</panel>
								<panel></panel> <!-- I have no idea why this needs to be here, weird behavior without it -->
							</panel>
							<panel border="%%history%% $$veryBestTime$$" layout="box" orientation="page">
								<panel><label alignmentX=".5">%%bestever%% $$veryBestTime$$</label></panel>
								<panel><label alignmentX=".5">%%bestraof%% $$configuration_Statistics_raSize0$$: $$veryBestRA0$$</label></panel>
								<panel><label alignmentX=".5">$$globalSolveCount$$/$$globalAttemptCount$$ %%globalaverage%% $$globalAverage$$</label></panel>
							</panel>
						</panel>
						<panel layout="border" preferredsize="100x25">
							<scrollpane verticalpolicy="asneeded" horizontalpolicy="asneeded">
								<component type="commentarea"/>
							</scrollpane>
						</panel>
					</panel>
				</south>
			</panel>
			<panel nominsize="false" layout="border">
				<tabbedpane>
					<component name="Times" type="timesList"/>
					<component name="Sessions" type="sessionsList"/>
				</tabbedpane>
			</panel>
		</splitpane>
	</panel>
	<menubar>
		<menu mnemonic="f">%%file%%
			<menuitem action="importScrambles">%%import%%</menuitem>
			<menuitem action="exportScrambles">%%export%%</menuitem>
			<separator/>
			<menuitem action="addTime">%%addtime%%</menuitem>
			<separator/>
			<menuitem action="connectToServer">%%connect%%</menuitem>
			<separator/>
			<menuitem action="showConfiguration">%%configuration%%</menuitem>
			<separator/>
			<menuitem action="exit">%%exit%%</menuitem>
		</menu>
		<menu mnemonic="o">%%options%%
			<menuitem action="undo"/>
			<menuitem action="redo"/>
			<separator/>
			<menu mnemonic="k">%%keyboardtimer%%
				<checkboxmenuitem action="toggleLessAnnoyingDisplay">%%lessannoying%%</checkboxmenuitem>
				<checkboxmenuitem action="toggleHideScrambles">%%hidescrambles%%</checkboxmenuitem>
				<checkboxmenuitem action="toggleSpacebarStartsTimer">%%spacebaronly%%</checkboxmenuitem>
				<checkboxmenuitem action="toggleFullscreenTiming">%%fullscreentiming%%</checkboxmenuitem>
			</menu>
			<component type="customGUIMenu"/>
		</menu>
		<button nominsize="true" action="undo"/>
		<button nominsize="true" action="redo"/>
		<glue orientation="horizontal"/>
		<component type="profilecombobox"/>
		<component type="clock"/> <!-- Probably want to add a gui option for empty borders, to create blank space -->
		<menu mnemonic="h">%%help%%
			<menuitem action="showDocumentation">%%documentation%%</menuitem>
			<menuitem action="showAbout">%%about%%</menuitem>
		</menu>
		<button nominsize="true" action="togglefullscreen">+</button>
	</menubar>
</gui>
