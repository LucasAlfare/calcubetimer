<panel layout="border"><!--panel-->
	<center>
		<panel layout="border"><!--leftpanel-->
			<center>
				<panel layout="box" orientation="page"><!--center-->
					<component type="timerdisplay"/>
					<component type="scrambletext"/>
				</panel>
			</center>
			<page_end>
				<panel layout="box" orientation="page"><!--southwest-->
					<panel layout="flow" hgap="5" vgap="5">
						<component type="stackmatstatuslabel"/>
						<component type="scramblechooser"/>
						<component type="scramblelength"/>
						<component type="scramblenumber"/>
						<component type="multislice"/>
						<component type="serverscrambles"/>
					</panel>
					<panel layout="flow" hgap="5" vgap="5">
						<panel layout="grid" cols="3"><!--buttonspanel-->
							<component type="addtimebutton"/>
							<component type="keyboardcheckbox"/>
							<component type="resetbutton"/>
							<button action="currentaverage"><![CDATA[<html><font color="$$color_currentaverage$$">Current Average: $$lastaverage$$</font></html>]]></button>
							<button action="bestaverage"><![CDATA[<html><font color="$$color_bestaverage$$">Best Rolling Average: $$bestaverage$$</font></html>]]></button>
							<button action="sessionaverage">Session Average: $$sessionaverage</button>
						</panel>
					</panel>
					<component type="solveslabel"/>
					<!--<label><![CDATA[<html><center>$$solves$$/$$attempts$$ (solves/attempts)</center>]]></label>-->
				</panel>
			</page_end>
		</panel>
	</center>
	<line_end>
		<component type="timeslist"/>
	</line_end>
</panel>
